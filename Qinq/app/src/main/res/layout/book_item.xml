<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.book.BookActivity">


    <ImageView
        android:id="@+id/rest"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/rest"
        android:background="#FFF"
        />

    <TextView
        android:id="@+id/work"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/rest"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@+id/rest"
        android:layout_toRightOf="@+id/rest"
        android:background="#FFF"
        android:gravity="center_vertical|center_horizontal"
        android:text="三丁包" />

    <TextView
        android:id="@+id/price"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/rest"
        android:layout_alignLeft="@+id/work"
        android:layout_alignStart="@+id/work"
        android:layout_gravity="center_horizontal"
        android:background="#FFF"
        android:gravity="center_vertical|center_horizontal"
        android:text="￥20"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
