<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 默认时的背景图片-->
    <item android:color="#FFF" />
    <!-- 非触摸模式下获得焦点并单击时的背景图片 -->
    <item android:color="#F0F" android:state_pressed="true" />
    <!--获得焦点时的图片背景-->
    <item android:color="#0F0" android:state_focused="true" />

</selector>